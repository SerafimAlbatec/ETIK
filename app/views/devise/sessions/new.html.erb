<div id="loading"></div>
<div class="container box_shadow">
  <div class="row">
    <div class="col-md-6" id="leftCol">
        <h1>Log in</h1>

		<div class="gen_info"> 
          <p class="gen_p_info">Welcome to our new eshop-application!!! In order to continue with this application please first Log in with your data. If you don't have an account redirect to our Sign up page. Thank you for visiting us!!</br></br>
          We recommend you to download or update Google Chrome, Firefox for better browsing experience. Click this images below</br><%= link_to image_tag("chrome.png", size: "60x60"), "https://www.google.com/chrome/browser/desktop/index.html", target: "_blank" %><%= link_to image_tag("firefox.png", size: "60x60"), "https://www.mozilla.org/de/firefox/desktop/", target: "_blank" %>
          </p>
          <!-- image_tag("/assets/firefox.png" -->
        </div>

    </div><!--Col-->

    <div class="col-md-6">


		<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "epikoinonia_form", id: "contact-form"}) do |f| %>

		 <div class="form-group">
		    <div><%= f.label :email %><br />
		    <%= f.email_field :email, autofocus: true, class: "form-control" %></div>
		</div>
        
        <div class="form-group">
		  <div><%= f.label :password %><br />
		    <%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>
		</div>
        
        <div class="form-group">
		  <% if devise_mapping.rememberable? -%>
		    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		  <% end -%>
		</div>

        <div class="form-group">
		  <div><%= f.submit "Log in", class: "btn btn-success"%></div>
		</div>
		<% end %>

		<%= render "devise/shared/links" %>

	</div>
  </div>
</div>

